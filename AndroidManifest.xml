<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dockit_test">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        tools:replace="android:icon,android:roundIcon,android:theme"
        tools:node="merge"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dockit_Test">

        <activity
            android:name="me.vidv.vidvorchestratorsdk.VIDVOrchestratorHostActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:replace="android:theme">
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.valify.vidvotpsdk.VIDVOTPHostActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:replace="android:theme">
        </activity>

        <!-- DocKit SDK Activity -->
        <activity
            android:name="me.vidv.vidvdockitsdk.VidvDocKitHostActivity"
            android:screenOrientation="portrait" />

        <!-- Liveness SDK Activity -->
        <activity
            android:name="me.vidv.vidvlivenesssdk.HostLivenessActivity"
            android:screenOrientation="portrait" />

        <!-- Auth SDK Activity -->
        <activity
            android:name="me.vidv.vidvauthsdk.VIDVAuthHostActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>